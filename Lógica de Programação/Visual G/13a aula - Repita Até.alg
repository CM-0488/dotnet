algoritmo "semnome"
// Função :
// Autor :
// Data : 23/01/2024
// Seção de Declarações 
var

   letra : caracter

inicio

      repita
      
            escreval ("Digite uma letra: ")
            leia (letra)
      
      ate letra = "A"

            escreval
            escreval
            escreval ("Parabéns, você digitou a letra procurada! ")

fimalgoritmo
